<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/dialog_curve"
    android:layout_height="280dp">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/action_bar_curve"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Customer details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:id="@+id/textLay1"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter customer name"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:inputType="textEmailAddress"
            android:textColor="#000"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/textLay1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:id="@+id/textLay2"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/customerNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Enter phone no."
            android:maxLength="10"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:inputType="number"
            android:textColor="#000"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_below="@+id/textLay2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="150dp"
        android:id="@+id/textLay3"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Discount %"
            android:maxLength="3"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:inputType="number"
            android:textColor="#000"
            />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/textLay2"
        android:layout_toRightOf="@id/textLay3"
        android:id="@+id/billBtn"
        android:textColor="#FFFFFF"
        android:background="@drawable/btnshape"
        android:text="Bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>