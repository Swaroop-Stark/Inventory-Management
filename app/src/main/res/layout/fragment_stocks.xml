<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StocksFragment">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="#FFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            />
        <TextView
            android:layout_marginLeft="18dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Stocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <SearchView
        android:id="@+id/searchv"
        android:background="@drawable/edittext_bg_shape2"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/action_bar"
        android:layout_marginTop="10dp"
        android:iconifiedByDefault="false"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <RelativeLayout
        android:elevation="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:background="@color/pink"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:id="@+id/look"
        android:layout_below="@+id/searchv"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:textColor="#FFF"
            android:textStyle="bold"
            android:id="@+id/productName"
            android:text="Product name"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="220dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#FFF"
            android:id="@+id/quantity"
            android:text="Qty"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/mrp"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#FFF"
            android:id="@+id/mrp"
            android:text="Storage location"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ImageView
        android:id="@+id/noImg"
        android:src="@mipmap/nodata"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/look"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>