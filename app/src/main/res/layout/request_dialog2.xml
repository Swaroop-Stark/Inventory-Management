<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_curve"
    android:layout_height="260dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/action_bar_curve"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Billing successful"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <cdflynn.android.library.checkview.CheckView
        android:id="@+id/checkbox"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/action_bar"
        app:checkView_strokeColor="@color/pink"
        app:checkView_strokeWidth="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/errorText"
        android:textSize="18sp"
        android:text="Get back to billing?"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_below="@id/checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Space
        android:id="@+id/space"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="100dp"
        android:layout_height="20dp" />
    <Button
        android:id="@+id/okBtn"
        android:layout_toLeftOf="@+id/space"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btnshape3"
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <Button
        android:id="@+id/noBtn"
        android:layout_toRightOf="@+id/space"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btnshape3"
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
</RelativeLayout>