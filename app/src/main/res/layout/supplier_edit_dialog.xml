<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_curve"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/action_bar_curve"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/name"
        android:text="Name"
        android:layout_marginTop="8dp"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_below="@id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/supplierAddress"
        android:layout_below="@+id/name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="8dp"
        android:inputType="text"
        android:paddingRight="8dp"
        android:hint="Enter supplier's address"
        android:background="@drawable/edittext_bg_shape2"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <EditText
        android:id="@+id/supplierPhoneNumber"
        android:layout_below="@+id/supplierAddress"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:hint="Enter supplier's phone no."
        android:background="@drawable/edittext_bg_shape2"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <Button
        android:layout_below="@+id/supplierPhoneNumber"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/save"
        android:textColor="#FFF"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btnshape"
        android:text="save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>